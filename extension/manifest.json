{
    "manifest_version": 3,
    "name": "Screen Cat",
    "version": "1.0",
    "description": "A cat that moves around your screen",
    "icons": {
      "128": "icon.png"
    },
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"] ,
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
    {
      "resources": ["cat.gif"],
      "matches": ["<all_urls>"]
    }
    ]
  }