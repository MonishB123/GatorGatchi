{
  "manifest_version": 3,
  "name": "GatorGatchi",
  "version": "1.0",
  "description": "A gator that helps you learn",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "https://*/*",
    "http://*/*",
    "storage"
],
  "host_permissions": [
    "https://gatorgachi.firebaseapp.com/*",
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["base_gif.gif", "popup.html", "layout.css"], 
      "matches": ["<all_urls>"]
    }
  ]
}
